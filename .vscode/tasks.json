{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Cpp build task",
      // 改成你自己的路径。
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        // task编译的exe在bin下并保持源代码的目录结构。
        "${workspaceFolder}\\bin\\${relativeFileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}